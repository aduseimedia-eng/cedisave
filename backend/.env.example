# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smart_money_gh
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=KudiPal <noreply@kudipal.com>

# App Configuration
APP_NAME=KudiPal
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:8080

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Ghana Phone Validation
ALLOWED_PHONE_PREFIXES=233

# Gamification Settings
XP_PER_EXPENSE_LOG=10
XP_PER_BUDGET_MET=100
XP_PER_GOAL_COMPLETED=250
XP_PER_STREAK_DAY=5

# Budget Alert Thresholds
BUDGET_ALERT_THRESHOLD_1=50
BUDGET_ALERT_THRESHOLD_2=75
BUDGET_ALERT_THRESHOLD_3=90

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false

# Cors Settings
CORS_ORIGIN=http://localhost:8080

# File Upload (Future Feature)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Google OAuth Configuration (for Gmail integration)
# Get these from Google Cloud Console: https://console.cloud.google.com/
# 1. Go to APIs & Services > Credentials
# 2. Create OAuth 2.0 Client ID (Web application)
# 3. Add authorized redirect URI: http://localhost:5000/api/v1/gmail/callback
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/v1/gmail/callback
BACKEND_URL=http://localhost:5000
